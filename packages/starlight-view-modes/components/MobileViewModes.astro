<style is:global>  
  body.zen-mode *:is(:not(:is(:has(main), main, main *, :has(#zen-mode-off), #zen-mode-off, #zen-mode-off *)), footer) {
    display: none;
  }

  body.zen-mode {
    overflow-x: hidden;
  }

  body.zen-mode main {
    width: calc(100vw - var(--sl-sidebar-pad-x));
  }

  body.zen-mode main .sl-container {
    margin: 0 auto;
  }

  body.zen-mode .main-frame {
    padding: 0;
  }
</style>

<style>
  :is(#mobile-zen-mode-on, #mobile-presentation-mode-on) {
    cursor: pointer;
    width: 3rem;
    height: 3rem;

    margin: 2rem 2rem 0 2rem;
    padding: 0.5rem;
    background: var(--sl-color-bg);
    border: 2px solid var(--sl-color-gray-1);
    border-radius: 0.5rem;

    color: currentColor;
    box-shadow: 0px 0px none;

    display: flex;
    justify-content: center;
    align-self: center;

    -webkit-transition: color 300ms linear, background-color 300ms linear, box-shadow 300ms linear;
    -ms-transition: color 300ms linear, background-color 300ms linear, box-shadow 300ms linear;
    transition: color 300ms linear, background-color 300ms linear, box-shadow 300ms linear;
  }

  :is(#mobile-zen-mode-on, #mobile-presentation-mode-on):hover {
      background: var(--sl-color-gray-1);
      color: var(--sl-color-gray-6);
      box-shadow: 8px 8px var(--sl-color-gray-3);
  }

  :is(#mobile-zen-mode-on, #mobile-presentation-mode-on) > svg {
    transform: translateY(0.2em);
  }
</style>
  
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const zenModeOn = document.getElementById('mobile-zen-mode-on');
    const presentationModeOn = document.getElementById('mobile-presentation-mode-on');
    
    zenModeOn?.addEventListener('click', () => {
      document.body.classList.remove('presentation-mode');
      document.body.classList.add('zen-mode');
    });
    
    presentationModeOn?.addEventListener('click', () => {
      document.body.classList.remove('zen-mode');
      document.body.classList.add('presentation-mode');
    });
  });
</script>
