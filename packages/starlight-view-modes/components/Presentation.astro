<script>
  document.addEventListener('DOMContentLoaded', () => {
    var body = document.body;
    var content = document.getElementsByTagName('main')[0];

    var presentationBox = document.createElement("div");
    presentationBox.id = "view-modes-presentation-box";

    var presentationContent = document.createElement("div");
    presentationContent.id = "view-modes-presentation-content";
    presentationContent.style.display = 'none';
    presentationContent.innerHTML = content?.innerHTML;

    body.insertBefore(presentationBox, body.firstChild);
    presentationBox.appendChild(presentationContent);
  });
</script>